<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="@color/bg_black.25">
    <EditText
            android:fontFamily="@font/inter"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:hint="Логин"
            android:ems="10"
            android:textColorHint="#aab0bb"
            android:paddingStart="10dp"
            android:id="@+id/editTextText"
            android:background="@drawable/rounded_bg"
            android:bottomRightRadius="15dp"
            android:bottomLeftRadius="15dp"
            android:topLeftRadius="15dp"
            android:topRightRadius="15dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.181"/>
    <EditText
            android:fontFamily="@font/inter"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:hint="Пароль"
            android:textColorHint="#aab0bb"
            android:paddingStart="10dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextTextPassword"
            android:background="@drawable/rounded_bg"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextText" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <ru.helpfront.base.components.ui.Button
            android:text="Зарегистироватся"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:paddingX="40"
            app:paddingY="20"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            app:backgroundColor="@color/gray"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>