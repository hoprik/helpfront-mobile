<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/constraintLayout2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="12dp">

            <TextView
                    android:text="Валера морозов (hoprik)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/profileUserName"
                    android:textSize="24sp"
                    android:layout_weight="1" android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/birthday"
                    android:id="@+id/profileBirthdayIcon"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/profileUserName"
                    app:layout_constraintStart_toStartOf="parent"
            />
            <TextView
                    android:text="10.10.2008 (Весы)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/profileBirthdayName"
                    app:layout_constraintStart_toEndOf="@+id/profileBirthdayIcon"
                    app:layout_constraintTop_toBottomOf="@+id/profileUserName" android:layout_marginTop="8dp"
                    android:layout_marginStart="4dp" android:textSize="15sp" android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/profileClassAndRole"
                    app:layout_constraintTop_toBottomOf="@+id/profileBirthdayName"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    android:textColor="@color/white" android:text="Класс: не указан  Роль: ученик"
                    android:textSize="15sp"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" app:srcCompat="@drawable/telegram" android:id="@+id/profileTelegram"
                    app:layout_constraintTop_toBottomOf="@+id/profileClassAndRole"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="4dp"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" app:srcCompat="@drawable/discord" android:id="@+id/profileDiscord"
                    app:layout_constraintTop_toBottomOf="@+id/profileClassAndRole"
                    app:layout_constraintStart_toEndOf="@+id/profileTelegram"
                    android:layout_marginTop="4dp" android:layout_marginStart="4dp"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" app:srcCompat="@drawable/github" android:id="@+id/profileGithub"
                    app:layout_constraintTop_toBottomOf="@+id/profileClassAndRole"
                    app:layout_constraintStart_toEndOf="@+id/profileDiscord"
                    android:layout_marginTop="4dp" android:layout_marginStart="4dp"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" app:srcCompat="@drawable/instagram" android:id="@+id/profileInstagram"
                    app:layout_constraintTop_toBottomOf="@+id/profileClassAndRole"
                    app:layout_constraintStart_toEndOf="@+id/profileGithub"
                    android:layout_marginTop="4dp" android:layout_marginStart="4dp"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" app:srcCompat="@drawable/youtube" android:id="@+id/profileYoutube"
                    app:layout_constraintTop_toBottomOf="@+id/profileClassAndRole"
                    app:layout_constraintStart_toEndOf="@+id/profileInstagram"
                    android:layout_marginTop="4dp" android:layout_marginStart="4dp"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" app:srcCompat="@drawable/vk" android:id="@+id/profileVk"
                    app:layout_constraintTop_toBottomOf="@+id/profileClassAndRole"
                    app:layout_constraintStart_toEndOf="@+id/profileYoutube"
                    android:layout_marginTop="4dp" android:layout_marginStart="4dp"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" app:srcCompat="@drawable/tiktok" android:id="@+id/profileTiktok"
                    app:layout_constraintTop_toBottomOf="@+id/profileClassAndRole"
                    app:layout_constraintStart_toEndOf="@+id/profileVk"
                    android:layout_marginTop="4dp" android:layout_marginStart="4dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp" app:srcCompat="@drawable/duck_icon" android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:weightSum="4"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:textAlignment="center"
                    android:textSize="26sp" android:textColor="@color/white"
                    android:fontFamily="@font/inter" android:typeface="normal" android:textStyle="bold"/>
            <TextView
                    android:text="Готовых задач"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:textColor="@color/white"
                    android:textSize="16sp" android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <TextView
                    android:text="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:textAlignment="center"
                    android:textSize="26sp" android:textColor="@color/white" tools:text="2"
                    android:fontFamily="@font/inter" android:typeface="normal" android:textStyle="bold"/>
            <TextView
                    android:text="Лайка"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:textColor="@color/white"
                    android:textSize="16sp" android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <TextView
                    android:text="200"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:textAlignment="center"
                    android:textSize="26sp" android:textColor="@color/white" tools:text="200"
                    android:fontFamily="@font/inter" android:typeface="normal" android:textStyle="bold"/>
            <TextView
                    android:text="Коинов"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView12" android:textColor="@color/white"
                    android:textSize="16sp" android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView13" android:textAlignment="center"
                    android:textSize="26sp" android:textColor="@color/white" tools:text="0"
                    android:fontFamily="@font/inter" android:typeface="normal" android:textStyle="bold"/>
            <TextView
                    android:text="Собрано коллекций"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView14" android:textColor="@color/white"
                    android:textSize="16sp" android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>