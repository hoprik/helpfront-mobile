<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/firstBg">

    <TextView
            android:text="Привет, {name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/greating"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>
    <ru.helpfront.base.components.ui.Button
            app:imageSrc="@drawable/profile"
            android:layout_width="25dp"
            android:layout_height="25dp" android:id="@+id/button2"
            app:cornerRadius="5dp"
            app:backgroundColor="@color/secondBg"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>