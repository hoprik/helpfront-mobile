<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/bg_black.25">

    <EditText
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/confirmInput"
            android:textColorHint="@color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLength="4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:singleLine="false" android:selectAllOnFocus="false"
            android:hint="0000" android:textAlignment="center" android:textSize="24sp"
            android:background="@drawable/rounded_bg" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.441"/>
    <TextView
            android:text="Введите код с почты"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/confirmInput" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.823" android:textColor="@color/white" android:textStyle="bold"
            android:textSize="26sp"/>
    <ru.helpfront.base.components.ui.Button
            android:text="Подтвердить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/confirmButton"
            app:layout_constraintTop_toBottomOf="@id/confirmInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:paddingX="40"
            app:paddingY="20"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            app:backgroundColor="@color/gray"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>