<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="@color/bg_black.25">
    <EditText
            android:fontFamily="@font/inter"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:inputType="text"
            android:hint="Имя"
            android:ems="10"
            android:textColorHint="#aab0bb"
            android:paddingStart="10dp"
            android:id="@+id/regFName"
            android:background="@drawable/rounded_bg"
            android:bottomRightRadius="15dp"
            android:bottomLeftRadius="15dp"
            android:topLeftRadius="15dp"
            android:topRightRadius="15dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.023" app:layout_constraintHorizontal_bias="0.127"/>
    <EditText
            android:fontFamily="@font/inter"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:inputType="text"
            android:hint="Фамилия"
            android:ems="10"
            android:textColorHint="#aab0bb"
            android:paddingStart="10dp"
            android:id="@+id/regLName"
            android:background="@drawable/rounded_bg"
            android:bottomRightRadius="15dp"
            android:bottomLeftRadius="15dp"
            android:topLeftRadius="15dp"
            android:topRightRadius="15dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.023" app:layout_constraintHorizontal_bias="0.865"/>
    <EditText
            android:fontFamily="@font/inter"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:hint="Логин"
            android:textColorHint="#aab0bb"
            android:paddingStart="10dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/regLogin"
            android:background="@drawable/rounded_bg"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/regFName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:fontFamily="@font/inter"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:hint="Почта"
            android:textColorHint="#aab0bb"
            android:paddingStart="10dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/regEmail"
            android:background="@drawable/rounded_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regLogin"
            android:layout_marginTop="8dp"/>
    <EditText
            android:fontFamily="@font/inter"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:hint="Пароль"
            android:textColorHint="#aab0bb"
            android:paddingStart="10dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/regPasswordF"
            android:background="@drawable/rounded_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regEmail"
            android:layout_marginTop="8dp"/>
    <EditText
            android:fontFamily="@font/inter"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:hint="Пароль"
            android:textColorHint="#aab0bb"
            android:paddingStart="10dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/regPasswordL"
            android:background="@drawable/rounded_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regPasswordF"
            tools:ignore="RtlSymmetry" android:layout_marginTop="8dp"/>
    <ru.helpfront.base.components.ui.Button
            android:text="Зарегистироватся"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/registerButton"
            app:layout_constraintTop_toBottomOf="@id/regPasswordL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:paddingX="40"
            app:paddingY="20"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            app:backgroundColor="@color/gray"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>